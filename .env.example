# App Configuration
APP_NAME=ModernAuth
PORT=8080
APP_ENV=development

# Database Configuration
# format: postgres://user:password@localhost:5432/dbname?sslmode=disable
DATABASE_URL=postgres://postgres:postgres@localhost:5432/modernauth?sslmode=disable

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Auth Configuration
# Generate a secret: openssl rand -base64 32
JWT_SECRET=your-32-character-secret-at-least
ACCESS_TOKEN_TTL=15m
REFRESH_TOKEN_TTL=168h
